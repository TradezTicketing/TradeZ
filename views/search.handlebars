            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        You have {{matches.length}} match(es)!
                    </div>
                    <div class="card-body">
                        <table>
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                </tr>
                            </thead>

                            <tbody id="results-display">
                                {{#each matches}}
                                <tr>
                                    <td scope="row">{{this.experience}}</td>
                                    <img id="loadingImage" src="../public/images/Table.jpeg"
                                        style="visibility:hidden" />
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>